<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.autoschool.GroupDialogController" spacing="10" style="-fx-padding: 10;">
    <Label text="Название группы"/>
    <TextField fx:id="nameField"/>
    <Label text="Дата начала"/>
    <DatePicker fx:id="startDatePicker"/>
    <Label text="Дата окончания"/>
    <DatePicker fx:id="endDatePicker"/>
    <Label text="Инструктор"/>
    <ComboBox fx:id="instructorComboBox"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Отмена" onAction="#handleCancel"/>
    </HBox>
</VBox>