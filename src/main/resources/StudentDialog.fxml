<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="221.0" spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.autoschool.StudentDialogController">
    <stylesheets>
        <URL value="@/css/styles.css" />
    </stylesheets>
    <Label text="Имя" />
    <TextField fx:id="nameField" />
    <Label text="Телефон" />
    <TextField fx:id="phoneField" />
    <Label text="Email" />
    <TextField fx:id="emailField" />
    <Label text="Дата регистрации" />
    <DatePicker fx:id="regDatePicker" />
    <Label text="Группа" />
    <ComboBox fx:id="groupComboBox" prefHeight="24.0" prefWidth="193.0" />
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleOk" prefHeight="32.0" prefWidth="77.0" text="OK" />
        <Button onAction="#handleCancel" text="Отмена" />
    </HBox>
</VBox>
